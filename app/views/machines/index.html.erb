<div class="container-index">
  <div class="row">
    <div class="col-xs-7" style="margin-bottom: 2em;">
      <div class="filter" style="display: flex;">
        <div class="dropdown">
          <a id="btn-filter" class="btn btn-primary btn-product dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Filter by
          </a>

          <div class="dropdown-menu filter-menu" aria-labelledby="dropdownMenuLink">
            <a class="dropdown-item" href="#">Price (Asc)</a>
            <a class="dropdown-item" href="#">Price (Des)</a>
            <a class="dropdown-item" href="#">Date</a>
          </div>
        </div>
        <div class="dropdown">
          <a id="btn-filter" class="btn btn-primary btn-product dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Type
          </a>

          <div class="dropdown-menu filter-menu" aria-labelledby="dropdownMenuLink">
            <a class="dropdown-item" href="#">Tractor</a>
            <a class="dropdown-item" href="#">Planter</a>
            <a class="dropdown-item" href="#">Fodder</a>
          </div>
        </div>
      </div>
      <% @machines.each do |machine| %>
        <div class="col-xs-12 col-sm-6 col-md-6">
          <%= link_to machine_path(machine) do %>
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path machine.photo, width: 600, crop: 'scale' %>');">
            <div class="card-category"><%= machine.category %></div>
            <div class="card-description">
              <h2><%= machine.make %></h2>
              <p><%= machine.location %></p>
            </div>
            <img class="card-user" src="https://avatars2.githubusercontent.com/u/39128210?s=460&v=4">
          </div>
          <% end %>
        </div>
      <% end %>
      <nav aria-label="Page navigation example" style="text-align: center;">
        <ul class="pagination">
          <li class="page-item">
            <a class="page-link" href="#" aria-label="Previous">
              <!-- <span aria-hidden="true">&laquo;</span> -->
              <!-- <span class="sr-only">Previous</span> -->
            </a>
          </li>
          <li class="page-item"><a class="page-link active" href="#">1</a></li>
          <li class="page-item"><a class="page-link" href="#">2</a></li>
          <li class="page-item"><a class="page-link" href="#">3</a></li>
          <li class="page-item">
            <a class="page-link" href="#" aria-label="Next">
              <span aria-hidden="true">&raquo;</span>
              <span class="sr-only">Next</span>
            </a>
          </li>
        </ul>
      </nav>
    </div>
    <div class="col-xs-5" style="position: sticky; top: 70px;">
      <div class="map-sticky">
        <div class="gmap">
          <div
              id="map"
              style="width: 100%;
              height: calc(100vh - 70px);"
              data-markers="<%= @markers.to_json %>"
            ></div>
        </div>
      </div>
  </div>
</div>

