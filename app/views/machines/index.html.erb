
<div class="row">
  <div class="col-xs-7">
    <h1>Machines#index</h1>
    <% @machines.each do |machine| %>
      <div class="col-xs-12 col-sm-6 col-md-6">
        <%= link_to machine_path(machine) do %>
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('');">
          <div class="card-category"><%= machine.category %></div>
          <div class="card-description">
            <h2><%= machine.make %></h2>
            <p><%= machine.location %></p>
          </div>
          <img class="card-user" src="https://avatars2.githubusercontent.com/u/39128210?s=460&v=4">
        </div>
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="col-xs-5 gmap">
    <div
        id="map"
        style="width: 100%;
        height: 600px;"
        data-markers="<%= @markers.to_json %>"
      ></div>
    </div>
</div>

