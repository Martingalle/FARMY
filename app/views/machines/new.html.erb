
 <div class="wrapper">
  <h1 class="text-center">Add a Machine</h1>
  </div>


<div class="container">
  <div class="row text-center col-xs-12 col-sm-9 col-sm-offset-2">
    <%= simple_form_for(@machine) do |f|%>
      <%= f.input :make, collection:["Massey-Ferguson", "New Holland", "International", "Bobard", "McCormick", "Kobatsu", "Manitou", "John Deere", "Deutz-Fahr", "Someca"] %>
      <%= f.input :category, collection: ["Tractor","Combine Harvester","Sower","Sprayer","Shredder","Spreader","Rolls","Sidewinder","Vineyard tractor"]%>
      <%= f.input :year, collection: 1991..2018, hint: "We don't allow machines older than 1990"%>
      <%= f.input :location, placeholder: 'Saint-Etienne, France' %>
      <%= f.input :force_moteur, label:'Engine power -bhp-' %>
      <%= f.input :roues_motrices, collection: [2,4,6] %>
      <%= f.input :price_per_hour, label: 'Price per hour (â‚¬)' %>
      <%= f.submit%>
    <% end %>

  </div>  
</div>
