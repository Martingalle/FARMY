<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1>Machines#new</h1>
      <%= simple_form_for @machine do |f| %>
        <%= f.error_notification %>
        <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
        <%= f.input :make %>
        <%= f.input :location %>
        <%= f.button :submit %>
      <% end %>
    </div>
  </div>
</div>
