<div class="header_create" style="background-image: linear-gradient(-120deg, rgba(63, 232, 171, 0.2), rgba(144, 124, 255, 0.2)), url('<%= image_path 'add_your_machine.jpg' %>');">
  <h1>Add your machine</h1>
</div>
<div class="container">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3 text-center">
      <%= simple_form_for(@machine) do |f|%>
        <%= f.error_notification %>
        <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
        <%= f.input :make, collection:["Massey-Ferguson", "New Holland", "International", "Bobard", "McCormick", "Kobatsu", "Manitou", "John Deere", "Deutz-Fahr", "Someca"] %>
        <%= f.input :category, collection: ["Tractor","Combine Harvester","Sower","Sprayer","Shredder","Spreader","Rolls","Sidewinder","Vineyard tractor"], as: :radio_buttons%>
        <%= f.input :year, collection: 1991..2018, hint: "We don't allow machines older than 1990"%>
        <%= f.input :location, placeholder: 'Lyon, France' %>
        <%= f.input :force_moteur, label:'Engine power -bhp-' %>
        <%= f.input :roues_motrices, label:'Driven wheels', collection: [2,4,6] %>
        <%= f.input :price_per_hour, label: 'Price per hour (â‚¬)' %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.submit class: 'btn btn-primary btn-product' %>
      <% end %>
    </div>
  </div>
</div>
